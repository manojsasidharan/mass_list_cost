<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:table="sap.ui.table">
	<table:Table id="Table" selectionMode="MultiToggle" visibleRowCount="10" alternateRowColors="true" fixedColumnCount="2" rowActionCount="1"
		columnResize="itemColumnResize" columnMove="itemColumnMove">
		<table:noData></table:noData>
		<table:toolbar>
			<Toolbar>
				<Title id="Ttitle" text="Retail Pricing (9)"/>
				<ToolbarSpacer/>
				<!--<Button id="BCopy" icon="sap-icon://copy" text="Copy" type="Transparent" visible="false"/>-->
				<Button id="Tcreate" icon="sap-icon://add" tooltip="Add new rows" press="onAddRows" visible="false"></Button>				
				<Button id="Tfilter" icon="sap-icon://less" tooltip="Delete" visible="false" press="onDeletePress"/>    <!--press="clearAllFilters"-->
				<Button id="Treset" icon="sap-icon://synchronize" tooltip="Synchronize Data" press="onSync" width="auto" visible="{=((${query>/Mode} === '01') ? false : true)}"/>	
			</Toolbar>
		</table:toolbar>
		<table:rowSettingsTemplate>
			<table:RowSettings highlight="{statusIcon}"/>
		</table:rowSettingsTemplate>
		<table:columns>
			<table:Column name="Material" width="9rem" filterProperty="Material" sortProperty="Material" tooltip="Material">
				<Label text="Material"/>
				<table:template>
					<HBox>
						<core:Icon src="sap-icon://color-fill" class="size1 sapUiTinyMarginTop sapUiTinyMarginEnd" color="{Color}" visible="true"></core:Icon>
						<Input value="{Material}" editable="{appControl>/FilterInput/Edit}" submit="onMaterialInput"/>
						<!--<Text text="{Material}" wrapping="false"/>-->
					</HBox>
				</table:template>
			</table:Column>
			<table:Column name="UPC" width="8rem" sortProperty="UPC" filterProperty="UPC" tooltip="UPC">
				<Label text="UPC"/>
				<table:template>
						<Input value="{UPC}" editable="{appControl>/FilterInput/Edit}"/>
					<!--<Text text="{LocationCode}" wrapping="false"/>-->
				</table:template>
			</table:Column>
			<table:Column name="Description" sortProperty="Description" filterProperty="Description" tooltip="Description">
				<Label text="Description"/>
				<table:template>
					<Text text="{Description}" wrapping="false"/>
				</table:template>
			</table:Column>
			<table:Column name="curr_retail" width="7rem" tooltip="Current Retail" hAlign="Right" >
				<Label text="Current Retail" wrapping="true"/>
				<table:template>
					<Text text="{Price}" wrapping="false" />
				</table:template>
			</table:Column>			
			<table:Column name="Allowance" width="6rem" tooltip="Allowance" hAlign="Right">
				<Label text="Allowance" wrapping="true" />
				<table:template>
					<Text text="{Allowance}" wrapping="false"  />
				</table:template>
			</table:Column>
			<table:Column name="Last_Cost" width="7rem" tooltip="Last Cost" hAlign="Right" visible="{=((${query>/Mode} === '01') ? false : true)}">
				<Label text="Last Unit Cost" wrapping="true"/>
				<table:template>
					<Text text="{Last_Cost}" wrapping="false"  textAlign="Right" />
				</table:template>
			</table:Column>
			<table:Column name="curr_gp" width="7rem" tooltip="Current GP" hAlign="Right" visible="{=((${query>/Mode} === '01') ? false : true)}">
				<Label text="Current GM %" wrapping="true"/>
				<table:template>
					<Text text="{Margin}" wrapping="false" />
				</table:template>
			</table:Column>
			<table:Column name="Price" width="8rem" tooltip="New Cost">
				<Label text="New Cost"/>
				<table:template>
					<HBox>
						<Input value="{
							parts: [
								{path: 'Cost'},
								{path: 'appControl>/Currency'}
							],
							type: 'sap.ui.model.type.Currency',
							formatOptions: {showMeasure: false}
						}" 
						editable="{appControl>/FilterInput/Edit}" 
						textAlign = "Right"
						liveChange="livecalculate"/>
						<Button icon="sap-icon://reset" class="size1 sapUiTinyMarginBegin" press="onreset"/>
					</HBox>
				</table:template>
			</table:Column>
			<table:Column name="new_gp" width="6rem" tooltip="New GP" hAlign="Right">
				<Label text="New GM %" wrapping="true"/>
				<table:template>
					<Text text="{allow}" wrapping="false" />
				</table:template>
			</table:Column>
			<table:Column name="new_allow" width="6rem" tooltip="GM % with allowance" hAlign="Right">
				<Label text="GM % w/ Allowance" wrapping="true"/>
				<table:template>
					<Text text="{new_allow}" wrapping="false" />
				</table:template>
			</table:Column>
			<table:Column name="Unit_sell" width="6rem" tooltip="Unit Sell" visible="false" hAlign="Right">
				<Label text="Unit Sell"/>
				<table:template>
					<Text text="{Unit_sell}" wrapping="false"  />
				</table:template>
			</table:Column>
			<table:Column name="Multiplier" width="6rem" tooltip="Multiplier" visible="false" hAlign="Right">
				<Label text="Multiplier"/>
				<table:template>
					<Text text="{Multiplier}" wrapping="false"  />
				</table:template>
			</table:Column>
		</table:columns>
<!--		<table:rowActionTemplate>
			<table:RowAction>
				<table:RowActionItem type="Delete" text="Delete" press="onDeletePress"></table:RowActionItem>
			</table:RowAction>
		</table:rowActionTemplate>-->
	</table:Table>
</core:FragmentDefinition>