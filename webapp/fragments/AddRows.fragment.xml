<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Number of rows to Add" draggable="true" resizable="false" afterClose="addDialogDestroy">
		<content>
			<FlexBox width="100%"  alignContent="SpaceAround" alignItems="Center" justifyContent="SpaceAround">
				<items>
					<Input value="{/data/row/}" width="3rem" maxLength="2"/>
				</items>
			</FlexBox>
		</content>
		<beginButton>
			<Button text="Submit" press="onAddDialogSubmit"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onAddDialogCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>